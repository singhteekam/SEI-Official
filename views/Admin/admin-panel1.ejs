<%- include('../partials/admin-header') %>

<!-- ========== Section Begins ========== -->
<section class="sec container mt-5 mb-5">
    <h2 class="card-title text-center">Pending Registrations</h2>
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Mobile Number</th>
                    <th scope="col">Course Selected</th>
                    <th scope="col">Action</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% datas.forEach(function (data) { %>
                    <% global.accEmailAddress= data.emailAddress %>
                <tr> 
                    <td name="firstName"><%= data.firstName %></td>
                    <td name="emailAddress"><%= data.emailAddress %></td>
                    <td name="phoneNumber"><%= data.phoneNumber %></td>
                    <td><%= data.courseType %></td>
                    <td><a href="/createNewStudent?id= <%= data._id %> " class="btn text-center btn-outline-success">Create Account</a></td>
                    <td><a href="/viewPendingRegForm?id= <%= data._id %> " class="btn text-center btn-outline-success">View</a></td>
                    <td><a href="/deleteRegForm?id= <%= data._id %> " class="btn text-center btn-outline-danger">Delete</a></td>
                </tr> 
                <% }) %>
            </tbody>
        </table>
    </div>
    </section>

    <a href="#" class="to-top">
        <i class="fa fa-chevron-up"></i>
    </a>
 
<%- include('../partials/footer') %>
